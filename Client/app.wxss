/**app.wxss**/
.container {
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  font-family: "微软雅黑"
}

page{
  background-color: #efefef; 
}

.line-input{
  border-bottom: 1rpx solid #525252;
  font-size: 17pt;
  margin-bottom: 20rpx;
  font-family: "微软雅黑"
}

.content{
  border: 1rpx solid #525252;
  height: 750rpx;
  display: block;
  width: 100%;
  border-radius: 5rpx;
}

.radio-group{
  margin:20rpx 0;
  line-height: 13pt;
}

picker{
  margin:20rpx 0;
}

.s-btn{
  min-width: 10rpx;
  display: inline-block;
  margin-right: 30rpx;
  font-size: 13pt;
  padding: 0rpx 40rpx;
}

.success{
  background-color: #09bb07;
  color: #fff;
}

.success:active{
  opacity: 0.2
}
