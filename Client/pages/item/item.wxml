<!--index.wxml-->
<view class="container">
  <view class="item">
    <input class='line-input' maxlength="80" placeholder="添加任务标题..." placeholder-style='font-family: "微软雅黑";' bindblur="titleInput"/> 
    <textarea class='content' placeholder="添加任务内容..." bindblur="contentInput"/>
    <radio-group class="radio-group" bindchange="itemLevelChange" >
      <label wx:for="{{level}}" class="radio">
        <radio value="{{item.value}}" checked="{{item.checked}}"/>{{item.text}}
      </label>
    </radio-group>
    <picker bindchange="bindTimeChange" mode='time' start="00:00" end="23:59">
      <view class="picker">
        任务时间：{{time}}
      </view>
    </picker>
    <picker bindchange="bindDateChange" mode='date' start="00:00" end="23:59">
      <view class="picker">
        任务日期：{{date}}
      </view>
    </picker>
    <button class="s-btn success" bindtap="submitItem">确认</button>
    <button class="s-btn cancel">取消</button>
  </view>
</view>
