.modal-bg{
  font-family: "微软雅黑";
  background-color: #000;
  opacity: 0.6;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 200;
  width: 100%;
}

.modal{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  overflow: hidden;
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #000;
  padding: 20rpx;
}