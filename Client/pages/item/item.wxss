.nav{
  height: 90rpx;
  box-shadow: 0rpx 5rpx 5rpx #999;
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 100;
}

.container{
  margin-top: 90rpx;
}

.bottom{
  bottom: 0rpx;
  box-shadow: 0rpx -5rpx 5rpx #999;
}

.top{
  top:0rpx;
}

.icon-hand{
  background-image:url("../../images/hand.png");
}

.icon-up{
  background-image:url("../../images/up.png");
}

.icon-remind{
  background-image:url("../../images/remind.png");
}

.icon-add{
  background-image:url("../../images/add.png");
}

.icon-detail{
  background-image:url("../../images/detail.png");
}

.modal-bg{
  font-family: "微软雅黑";
  background-color: #000;
  opacity: 0.6;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 200;
  width: 100%;
}

.modal{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  overflow: hidden;
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #000;
  padding: 20rpx;
}